@model List<Faculties>
<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a asp-controller="Home" asp-action="Index">Home</a>
		</li>
		<li class="breadcrumb-item">Index</li>
	</ol>
</nav>
<div class=" container">
    <div class="row">
		<div class="col-xl-12 col-md-12 col-sm-12 d-flex justify-content-start">
			<a type="button" class="btn btn-primary" asp-action="UpSert" asp-controller="Faculties"><span class="fas fa-plus"></span> Agregar Facultad</a>
		</div>
		<div class="col-xl-12 col-md-12 col-sm-12 mt-3"> 
			<table class="table table-striped table-bordered table-hover shadow-sm">
				<thead thead-dark>
					<tr>
						<th>Id</th>
						<th>Nombre</th>
						<th>Correo</th>
						<th>Descripción</th>
						<th>Estado</th>
						<th>Acciones</th>
					</tr>
					</thead>
				<tbody>
					@{
						foreach (Faculties faculties in Model)
						{
							<tr>
								<td>@faculties.Id</td>
								<td>@faculties.Name</td>
								<td>@faculties.Correo</td>
								<td>@faculties.Description</td>
								<td>
								    @if (faculties.IsActive)
								    {
									    <span class="badge bg-success">Activo</span>
								    }
								    else
								    {
									    <span class="badge bg-danger">Inactivo</span>
								    }
								</td>
								<td>
									<div class="d-flex gap-2">
										<a type="button" class="btn btn-success btn-sm rounded-circle d-flex align-items-center justify-content-center"
										   style="width: 40px; height: 40px;" asp-action="View" asp-controller="Faculties" asp-route-id="@faculties.Id" title="Ver">
											<i class="fa-solid fa-eye"></i>
										</a>
										<a type="button" class="btn btn-warning btn-sm rounded-circle d-flex align-items-center justify-content-center"
										   style="width: 40px; height: 40px;" asp-action="UpSert" asp-controller="Faculties" asp-route-id="@faculties.Id" title="Editar">
											<i class="fa-solid fa-pencil"></i>
										</a>
										<a type="button" class="btn btn-danger btn-sm rounded-circle d-flex align-items-center justify-content-center"
										   style="width: 40px; height: 40px;" asp-action="Delete" asp-controller="Faculties" asp-route-id="@faculties.Id" title="Eliminar">
											<i class="fa-solid fa-trash"></i>
										</a>
									</div>
								</td>

							</tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
